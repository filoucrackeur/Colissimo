{
  "manifest_version": 2,

  "name": "__MSG_colissimo_name__ ™",
  "description": "Suivez vos colis Colissimo en temps réel depuis leur préparation jusqu'à la livraison. Vous pouvez garder un historique 30 jours après la livraison. Cette extension n'est pas officielle mais utilise des services officiels",
  "version": "1.0",
  "options_page": "options.html",
  "permissions": [ 
    "tabs", "notifications",
    "http://*/",
    "https://*/"
  ], 
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'",
  "web_accessible_resources": [
   "icon-small.png"
  ],
  "icons": {
    "16": "icon-bitty.png",
    "48": "icon-small.png",
    "128": "icon-large.png"
  },
  "default_locale": "fr",
  "background": { 
    "scripts": ["js/bootstrap.min.js","js/jquery.min.js","js/background.js"]
  },

  "content_scripts" : [
    {
      "matches" : [
        "http://*/*",
        "https://*/*"
      ],
      "js" : ["js/bootstrap.min.js","js/jquery.min.js","js/contentscript.js"],
      "run_at" : "document_idle",
      "all_frames" : false
    }
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "options.html"
  }
}